                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-3 px-lg-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div> @await Component.InvokeAsync("Footer")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/reviews.js" asp-append-version="true"></script>
    <!-- Simplified Navigation Scripts with Fixed Theme -->
    <script>
        (function ()
        {
            'use strict';

            // Ensure theme and color mode are always fixed
            document.documentElement.setAttribute('data-bs-theme', 'light');

            // Close dropdown on outside click (mobile enhancement)
            function closeDropdownOnOutsideClick()
            {
                document.addEventListener('click', function (event)
                {
                    const dropdowns = document.querySelectorAll('.dropdown-menu.show');
                    dropdowns.forEach(function (dropdown)
                    {
                        const toggle = dropdown.previousElementSibling;
                        if (toggle && !toggle.contains(event.target) && !dropdown.contains(event.target))
                        {
                            const bsDropdown = bootstrap.Dropdown.getInstance(toggle);
                            if (bsDropdown)
                            {
                                bsDropdown.hide();
                            }
                        }
                    });
                });
            }

            // Keyboard navigation enhancement
            function enhanceKeyboardNavigation()
            {
                document.addEventListener('keydown', function (event)
                {
                    // Close dropdown on Escape key
                    if (event.key === 'Escape')
                    {
                        const openDropdowns = document.querySelectorAll('.dropdown-menu.show');
                        openDropdowns.forEach(function (dropdown)
                        {
                            const toggle = dropdown.previousElementSibling;
                            const bsDropdown = bootstrap.Dropdown.getInstance(toggle);
                            if (bsDropdown)
                            {
                                bsDropdown.hide();
                                toggle.focus(); // Return focus to toggle
                            }
                        });
                    }
                });
            }

            // Initialize on page load
            document.addEventListener('DOMContentLoaded', function ()
            {
                // Ensure fixed theme settings
                document.documentElement.setAttribute('data-bs-theme', 'light');
                localStorage.setItem('bootswatch-theme', 'yeti');

                // Initialize mobile enhancements
                closeDropdownOnOutsideClick();
                enhanceKeyboardNavigation();

                // Debug info in development
                if (window.location.hostname === 'localhost')
                {
                    console.log('WebSpark Theme System Initialized');
                    console.log('Fixed Theme: yeti');
                    console.log('Fixed Color Mode: light');
                }
            });

            // Handle window resize for responsive adjustments
            let resizeTimer;
            window.addEventListener('resize', function ()
            {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function ()
                {
                    // Close any open dropdowns on significant resize
                    if (window.innerWidth >= 992)
                    { // Large screens
                        const openDropdowns = document.querySelectorAll('.dropdown-menu.show');
                        openDropdowns.forEach(function (dropdown)
                        {
                            const toggle = dropdown.previousElementSibling;
                            const bsDropdown = bootstrap.Dropdown.getInstance(toggle);
                            if (bsDropdown)
                            {
                                bsDropdown.hide();
                            }
                        });
                    }
                }, 150);
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
