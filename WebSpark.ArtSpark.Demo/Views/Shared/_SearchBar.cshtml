@{
    var currentSearchQuery = ViewBag.SearchQuery as string ?? Context.Request.Query["q"].ToString();
}

@if (User.Identity!.IsAuthenticated)
{
    <div class="search-bar-container mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body py-3">
                <form asp-controller="Artwork" asp-action="Search" method="get" class="row g-2 align-items-center">
                    <div class="col-12 col-md-8 col-lg-9">
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="search" name="q" value="@currentSearchQuery" class="form-control form-control-lg"
                                placeholder="Search artworks by title, artist, or description..."
                                aria-label="Search artworks">
                        </div>
                    </div>
                    <div class="col-12 col-md-4 col-lg-3">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-search me-2"></i>Search Artworks
                            </button>
                        </div>
                    </div>
                </form>
                @if (!string.IsNullOrEmpty(currentSearchQuery))
                {
                    <div class="mt-3">
                        <div class="d-flex align-items-center justify-content-between flex-wrap">
                            <div class="me-3">
                                <span class="text-muted">Searching for:</span>
                                <span class="badge bg-primary fs-6">@currentSearchQuery</span>
                            </div>
                            <a href="@Url.Action("Index", "Artwork")" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Clear Search
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
