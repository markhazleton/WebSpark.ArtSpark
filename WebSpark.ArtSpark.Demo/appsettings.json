{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=c:\\websites\\artspark\\artspark.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ArtSparkAgent": {
    "OpenAI": {
      "ApiKey": "{user-secret}",
      "ModelId": "gpt-4o",
      "VisionModelId": "gpt-4o",
      "MaxTokens": 2000,
      "Temperature": 0.7,
      "TopP": 0.9,
      "RequestTimeout": "00:02:00",
      "MaxRetries": 3
    },
    "ArtInstitute": {
      "BaseUrl": "https://api.artic.edu/api/v1",
      "RequestTimeout": "00:01:00",
      "MaxRetries": 3
    },
    "DefaultChatSettings": {
      "MaxTokens": 1000,
      "Temperature": 0.7,
      "TopP": 0.9,
      "MaxConversationLength": 20
    },
    "Cache": {
      "Enabled": false,
      "ConversationExpiry": "01:00:00"
    },
    "Logging": {
      "EnableTelemetry": true,
      "LogLevel": "Information"
    }
  },
  "CsvOutputFolder": "c:\\websites\\artspark\\CsvOutput",
  "WebSpark": {
    "LogFilePath": "c:\\websites\\artspark\\Logs\\artspark-.txt",
    "DocumentationPath": "docs"
  },
  "HttpRequestResultPollyOptions": {
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 1,
    "CircuitBreakerThreshold": 3,
    "CircuitBreakerDurationSeconds": 10
  },
  "FileUpload": {
    "MaxProfilePhotoSize": 5242880,
    "AllowedImageTypes": "image/jpeg,image/png,image/webp",
    "ProfilePhotoPath": "c:\\websites\\artspark\\media",
    "ThumbnailSizes": [
      64,
      128,
      256
    ],
    "DiskUsageThresholdMB": 5120
  },
  "AuditLog": {
    "RetentionDays": 365
  },
  "Identity": {
    "RequireEmailVerification": false,
    "DefaultRoles": [
      "User",
      "Admin"
    ]
  },
  "Email": {
    "SmtpHost": "",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "{user-secret}",
    "FromAddress": "noreply@artspark.markhazleton.com",
    "FromName": "ArtSpark"
  }
