{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ArtSparkAgent Prompts Configuration",
    "type": "object",
    "properties": {
        "DataPath": {
            "type": "string",
            "description": "Root-relative or absolute path to the persona prompt markdown directory."
        },
        "EnableHotReload": {
            "type": "boolean",
            "description": "When true, monitor prompt files for changes using PhysicalFileProvider."
        },
        "FallbackToDefault": {
            "type": "boolean",
            "description": "When true, fall back to hardcoded prompts if the file system prompt fails validation."
        },
        "VariantsPath": {
            "type": "string",
            "description": "Optional directory that contains alternate prompt variants (used in development/testing)."
        },
        "DefaultMetadata": {
            "type": "object",
            "description": "Baseline metadata applied to each persona unless overridden in front matter.",
            "properties": {
                "ModelId": {
                    "type": "string"
                },
                "Temperature": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0
                },
                "TopP": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0
                },
                "MaxOutputTokens": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 4096
                },
                "FrequencyPenalty": {
                    "type": "number",
                    "minimum": -2.0,
                    "maximum": 2.0
                },
                "PresencePenalty": {
                    "type": "number",
                    "minimum": -2.0,
                    "maximum": 2.0
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "DataPath",
        "FallbackToDefault",
        "DefaultMetadata"
    ],
    "additionalProperties": false
}